@model Spice.Models.MenuItem



@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h1 class="text-info">Delete MenuItem</h1>
<br />

<form method="post" asp-action="Delete" enctype="multipart/form-data">
    <div class="border backgroundWhite row">

        <input asp-for="Id" type="hidden" />

        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name" class="col-form-label"></label>

                </div>

                <div class="col-8">
                    <input readonly asp-for="Name" class="form-control" />
                </div>

            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Description" class="col-form-label"></label>

                </div>

                <div class="col-8">
                    @Html.TextAreaFor(m => m.Description)
                </div>



            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Price" class="col-form-label"></label>

                </div>

                <div class="col-8">
                    <input readonly asp-for="Price" class="form-control" />
                </div>



            </div>


            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CategoryId" class="col-form-label"></label>

                </div>

                <div class="col-8">
                    <input readonly asp-for="Category.Name" class="form-control" />
                </div>

            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="SubCategoryId" class="col-form-label"></label>

                </div>

                <div class="col-8">
                    <input readonly asp-for="SubCategory.Name" class="form-control" />
                </div>

            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Spicyness" class="col-form-label"></label>

                </div>

                <div class="col-8">
                    <input readonly asp-for="Spicyness" class="form-control" />
                </div>

            </div>

        </div>

        <div class="col-3 offset-1">
            <img src="@Model.Image" style="border-radius:5px; width:100%; border: 1px solid #bbb9b9;" />
        </div>


        <div class="col-8">
            <div class="col-8 offset-4">
                <partial name="_DeleteAndBackToListButton" model="Model.Id" />
            </div>
        </div>



    </div>
</form>


