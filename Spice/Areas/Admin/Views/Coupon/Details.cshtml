@model Spice.Models.Coupon
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h1 class="text-info">Edit Coupon</h1>
<br />

<form method="post" asp-action="Details">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="col-form-label"></label>

            </div>

            <div class="col-5">
                <input asp-for="Name" readonly class="form-control" />

            </div>
           
        </div>
        

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CouponType" class="col-form-label"></label>

            </div>

            <div class="col-5">
                <input readonly asp-for="CouponType" class="form-control" />
            </div>

        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Discount" class="col-form-label"></label>

            </div>

            <div class="col-5">
                <input asp-for="Discount" readonly class="form-control" />
            </div>

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MinimumAmount" class="col-form-label"></label>

            </div>

            <div class="col-5">
                <input readonly asp-for="MinimumAmount" class="form-control" />
            </div>

            

        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="IsActive" class="col-form-label"></label>

            </div>

            <div class="col-5">
                <input readonly asp-for="IsActive" type="checkbox" />
            </div>

        </div>

        <div class="form-group">
            <div class="offset-2 col-5">
                <div class="row">
                    <partial name="_DetailsAndBackToListButton" />
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}

